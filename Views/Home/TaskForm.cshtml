@{
    ViewData["Title"] = "Task Form";
}

@model TaskModel

<h2>Enter a Task:</h2>
<form method="post">

    <label asp-for="Task">Task:</label>
    <input type="text" asp-for="Task" /><br />
    <label asp-for="DueDate">Due Date:</label>
    <input type="text" asp-for="DueDate" /><br />
    <select asp-for="Quadrant">
        <option value="">Choose a Quadrant</option>
        <option value="1">Quadrant I: Important / Urgent</option>
        <option value="2">Quadrant II: Important / Not Urgent</option>
        <option value="3">Quadrant III: Not Important / Urgent</option>
        <option value="4">Quadrant IV: Not Important / Not Urgent</option>
    </select><br />
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select><br />

    <button type="submit">Save</button>

    <div asp-validation-summary="All"></div>
</form>