@{
    ViewData["Title"] = "Task Form";
}

@model TaskModel

<h2>Enter a Task:</h2>
<form method="post">

    <label asp-for="Task">Task:</label>
    <input type="text" asp-for="Task" /><br />
    <label asp-for="DueDate">Task:</label>
    <input type="datetime" asp-for="DueDate" /><br />
    <label asp-for="Quadrant">Task:</label>
    <input type="text" asp-for="Quadrant" /><br />
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <button type="submit">Save</button>

    <div asp-validation-summary="All"></div>
</form>